<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zm.dmReader.messages.MessagesActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messageRecycle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/GPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MessageUSER" />

    <TextView
        android:id="@+id/MessageUSER"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/PPrimary"
        android:clickable="false"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:text="DMUSER"
        android:textColor="@color/textColor"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>